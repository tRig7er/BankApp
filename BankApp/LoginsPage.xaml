        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Margin="0,35,0,0">
            <Entry BackgroundColor="White" Placeholder="login" WidthRequest="260" />
            <Entry BackgroundColor="White" Placeholder="password" Margin="0,20,0,0"/>
            <Button BackgroundColor="#7af400"
                    Text="Sign up"
                    Margin="0,60,0,0"
                    TextColor="Black"
                    WidthRequest="100"
                    Clicked="Button_Clicked_1"
                    />
