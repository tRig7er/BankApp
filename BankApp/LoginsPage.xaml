<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankApp.LoginsPage"
             Title="LoginsPage" Background="#534d4d">
    <VerticalStackLayout>
            <Path Rotation="180" Data="m182.20493,201.83188l55.66852,-66.91443l452.33149,-136l0,255l-556.20506,1l48.20505,-53.08557z" Fill="#7af400" VerticalOptions="Center" Margin="-1,0,0,0" />
